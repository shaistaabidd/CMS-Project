<div class="subjects index">
  <h1>Subjects</h1>
  <%= link_to("Add new Subject", 'subjects/new',:class => 'action new')%>
  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Action</th>
    </tr>
    <% @subjects.each do |subject|%>
    <tr>
      <td><%= subject.position %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= subject.visible ? 'Yes':'No'%></td>
      <td class="center"><%= subject.pages.size%></td>
      <td class = "action">
        <%=link_to("Show","subjects/#{subject.id}",:class=>'action show')%>  <!--- subject_path(subject.id) --->
        <%=link_to("Edit","subjects/#{subject.id}/edit",:class=>'action edit')%> <!--- edit_subject_path(subject.id) --->
        <%=link_to("Delete","subjects//#{subject.id}/delete",:class=>'action delete')%> <!--- edit_subject_path(subject.id) --->
      </td>
    </tr>
    <%end%>
  </table>
</div>


